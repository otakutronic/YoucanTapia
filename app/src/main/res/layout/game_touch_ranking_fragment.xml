<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mji.tapia.youcantapia.widget.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_centerVertical="true"
        app:custom_font="fonts/mplus-2p-black.ttf"
        android:layout_below="@id/imageView"
        android:text="@string/game_touch_ranking_title"
        android:textSize="50sp"
        android:textColor="@color/colorDarkText"/>

    <ListView
        android:id="@+id/rank_list"
        android:layout_width="wrap_content"
        tools:listitem="@layout/game_touch_ranking_item"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/title"
        android:layout_marginTop="100dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"/>

</RelativeLayout>