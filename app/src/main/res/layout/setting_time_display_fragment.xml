<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_centerVertical="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.mji.tapia.youcantapia.widget.CustomFontTextView
                android:id="@+id/title"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_display_title"
                android:textSize="64sp"
                android:gravity="center"
                android:textColor="@color/colorDarkText"/>
            <com.mji.tapia.youcantapia.widget.CustomFontTextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_display_detail"
                android:textSize="24sp"
                android:textColor="@color/colorDarkText"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content">
            <com.mji.tapia.youcantapia.widget.CustomFontTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018 年 4 月 4 日"
                android:textSize="50sp"
                android:gravity="center"
                android:textColor="@color/colorDarkText"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <com.mji.tapia.youcantapia.widget.CustomFontTextView
                        android:id="@+id/am"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_display_am"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:textColor="@color/colorDarkText"/>
                    <com.mji.tapia.youcantapia.widget.CustomFontTextView
                        android:id="@+id/pm"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_display_pm"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:alpha="0.3"
                        android:textColor="@color/colorDarkText"/>
                </LinearLayout>

                <com.mji.tapia.youcantapia.widget.CustomFontTextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10:00"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorDarkText"
                    android:textSize="110sp"
                    android:textStyle="bold"
                    android:layout_gravity="top"
                    app:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipToPadding="false"
        android:padding="20dp"
        android:layout_marginBottom="30dp">
        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_display_setting"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:elevation="5dp"
            android:textSize="36sp"
            android:background="@drawable/shared_button_small_primary"
            android:gravity="center"
            android:textColor="@color/colorLightText"/>
        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/share_setting_confirm"
            android:background="@drawable/shared_button_small_primary"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:elevation="5dp"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="@color/colorLightText"/>
    </LinearLayout>

</RelativeLayout>