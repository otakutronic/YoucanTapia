<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/back_left"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@drawable/shared_button_primary"
        android:elevation="20dp"
        android:layout_marginStart="-260dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/shared_exit_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:text="@string/share_setting_back"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="20dp"
        android:visibility="invisible"
        android:layout_marginStart="00dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/shared_button_primary">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/shared_exit_icon" />

        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_font="fonts/mplus-2p-black.ttf"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:text="戻る"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="@color/colorLightText"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>