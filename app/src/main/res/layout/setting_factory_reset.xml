<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/factory_reset_icon" />

        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/factory_reset_title"
            android:textColor="@color/colorDarkText"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>
    <com.mji.tapia.youcantapia.widget.CustomFontTextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/factory_reset_detail"
        android:textColor="@color/colorDarkText"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:textSize="36sp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipToPadding="false"
        android:padding="20dp"
        android:layout_marginBottom="30dp">
        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:id="@+id/yes"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:elevation="5dp"
            android:textSize="36sp"
            android:background="@drawable/shared_button_small_red"
            android:gravity="center"
            android:textColor="@color/colorLightText"/>
        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:id="@+id/no"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:elevation="5dp"
            android:text="@string/no"
            android:background="@drawable/shared_button_small_primary"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="@color/colorLightText"/>
    </LinearLayout>
</RelativeLayout>