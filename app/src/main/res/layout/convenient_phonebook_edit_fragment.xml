<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="590dp"
        android:layout_height="280dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shared_wide_card"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605"
        tools:ignore="MissingConstraints" />

    <com.mji.tapia.youcantapia.widget.CustomFontTextView
        android:id="@+id/number_label"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/name_label"
        android:layout_below="@+id/name_label"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="90dp"
        android:elevation="5dp"
        android:text="@string/phonebook_contact_number_label"
        android:textColor="@color/colorDarkText"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/number_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.696"
        tools:ignore="MissingConstraints" />

    <com.mji.tapia.youcantapia.widget.CustomFontTextView
        android:id="@+id/number_input"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name_input"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:hint="@string/phonebook_contact_number_input_hint"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textColor="@color/colorDarkText"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/name_input"
        tools:ignore="MissingConstraints" />

    <com.mji.tapia.youcantapia.widget.CustomFontTextView
        android:id="@+id/name_input"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/number_label"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:paddingEnd="40dp"
        android:paddingStart="20dp"
        android:text="@string/phonebook_contact_name_input"
        android:textColor="@color/colorDarkText"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.289"
        tools:ignore="MissingConstraints" />

    <com.mji.tapia.youcantapia.widget.CustomFontTextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        android:text="@string/phonebook_contact_name_label"
        android:textColor="@color/colorDarkText"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/number_label"
        app:layout_constraintEnd_toStartOf="@+id/name_input"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.719"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/lineTop2"
        android:layout_width="356dp"
        android:layout_height="1dp"
        android:layout_above="@+id/number_input"
        android:layout_alignStart="@+id/name_input"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorCardDark"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/name_input"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/name_input"
        app:layout_constraintVertical_bias="0.163" />

    <View
        android:id="@+id/lineTop3"
        android:layout_width="356dp"
        android:layout_height="1dp"
        android:layout_above="@+id/number_input"
        android:layout_alignStart="@+id/name_input"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorCardDark"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/number_input"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/number_input"
        app:layout_constraintVertical_bias="0.458" />

    <RelativeLayout
        android:id="@+id/confirm_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title"
        android:layout_marginBottom="224dp"
        android:layout_marginStart="520dp"
        android:background="@drawable/shared_button_primary"
        android:elevation="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        tools:ignore="UnknownId">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/trash_can_white"
            android:drawablePadding="10dp"
            android:elevation="15dp"
            android:text="削除"
            android:textStyle="bold"
            app:srcCompat="@drawable/trash_can_white" />

        <com.mji.tapia.youcantapia.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/imageView2"
            android:elevation="15dp"
            android:gravity="center"
            android:text="@string/time_clock_setting"
            android:textColor="@color/colorLightText"
            android:textSize="26sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
